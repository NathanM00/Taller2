<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="https://fonts.googleapis.com/css?family=Montserrat" rel="stylesheet">
    <link rel="stylesheet" href="./styles/sass.css">
    <title>The Court Magazine</title>
  </head>

<body class="fondo__claro">

    <header class="encabezado-tienda">

        <a class="encabezado__logo logo__oscuro-tienda" href="/tienda"></a>

        <input type="" name="" id="" class="encabezado__search">

        <div class="encabezado__logs encabezado__pc">
            <a href="#" class="typo__oscuro" style="font-size:30px;">Log in</a>
                    <a class="logo__oscuro-carro encabezado__logo"  href="#"></a>
        </div>

        <div class="drop__down">
                <button class="drop__boton">
                    <img src="./recursos/menu.svg" class="drop__menu">
                </button>
                
                <div class="drop__content">
                     <a href="#" class="typo__oscuro">News</a>
                     <a href="#" class="typo__oscuro">Players</a>
                </div>
            </div>
            
    </header>

    <div class="contPrincipal fondo__tienda">

        <aside class="contPrincipal__lateral lateral__tienda">
            <div class="lateral__tienda-titular">
                <img src="./recursos/filtros.svg" alt="no cargaaaa">
                <p>Filters</p>
            </div>
            <div class="tienda__dropdown">
                            <button class="tienda__dropbtn">Department</button>
                                <div class="tienda__dropdown-content">
                                    <a href="/tienda/Jerseys">Jerseys</a>
                                    <a href="/tienda/T-shirts">T-Shirts</a>
                                    <a href="/tienda/Hoodies & Sweatshirts">Hoodies & Sweatshirts</a>
                                </div>
            </div>
            <div class="tienda__dropdown">
                            <button class="tienda__dropbtn">Shop For</button>
                                <div class="tienda__dropdown-content">
                                    <a href="#">Mens</a>
                                    <a href="#">Womens</a>
                                    <a href="#">Kinds</a>
                                </div>
            </div>
            <div class="tienda__dropdown">
                            <button class="tienda__dropbtn">Price Range</button>
                                <div class="tienda__dropdown-content">
                                    <a href="#">$20 - $40</a>
                                    <a href="#">$40 - $60</a>
                                    <a href="#">Over $60</a>
                                </div>
            </div>
        </aside>

        <section class="contPrincipal__principal principal__tienda" >

            <div class="tienda__superior">
                <input class="rangoprecio" type="range" name="" id="" min="30" max="150">
                <img src="./recursos/promo.png" alt="No carga esto">
            </div>
                <ul class="tienda__productos">
                    {{#each productos}}
                        <li class="tienda__item">
                            <img src="{{fotoPrincipal}}" class="item__fotoP" alt="">
                             <p class="item__precio">${{precio}}</p>
                            <h3 class="item__nombre">{{nombre}}</h3>
                        </li>
                       
                    {{/each}}
                </ul>

        </section>

    </div>

    <script >      
        var rango = document.querySelector('.rangoprecio');
                function buscarPorPrecio(){
                    console.log(rango.value);
                    location.href = '/tienda/Jerseys?precio=' + rango.value;
                }
                rango.addEventListener('change', buscarPorPrecio);
    </script>

</body>

</html>